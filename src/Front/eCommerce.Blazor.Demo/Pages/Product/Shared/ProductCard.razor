@if (view == CartUtilities.ViewCard.module)
{
    <MudCard>
        <MudCardMedia Image="@urlImg" />
        <MudCardContent>
            <MudText Typo="Typo.h6">@Nombre</MudText>
            <MudText Typo="Typo.subtitle2">$ @Precio</MudText>
        </MudCardContent>
        <MudCardActions>
            <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary" Href="@($"/Product/{Code}")" />
            <MudIconButton Icon="@Icons.Filled.AddShoppingCart" Color="Color.Primary" />
            <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Primary" />
            <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Primary" />
        </MudCardActions>
    </MudCard>
}
else if (view == CartUtilities.ViewCard.list)
{
    <MudPaper Elevation="1">
        <MudStack Row="true">
            <MudImage Src="@urlImg" Height="250" ObjectPosition="ObjectPosition.Center" ObjectFit="ObjectFit.Cover" />
            <MudStack Justify="Justify.FlexEnd" Class="pa-4" Spacing="0" Style="width:100% !important">
                <MudText Typo="Typo.h6" Class="align-self-start flex-1">@Nombre</MudText>
                <MudText Typo="Typo.subtitle2" Class="align-self-start flex-1">$ @Precio</MudText>
                <MudText Typo="Typo.body2" Class="flex-1" Style="text-align:justify-all !important">@Descripcion</MudText>
                <MudStack Row="true" Justify="Justify.FlexEnd" Class="align-self-end flex-1">
                    <MudIconButton Icon="@Icons.Material.Filled.Visibility" Color="Color.Primary" Href="@($"/Product/{Code}")" />
                    <MudIconButton Icon="@Icons.Filled.AddShoppingCart" Color="Color.Primary" />
                    <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Primary" />
                    <MudIconButton Icon="@Icons.Material.Filled.Share" Color="Color.Primary" />
                </MudStack>
            </MudStack>
        </MudStack>
    </MudPaper>
}
else
{
    <MudPaper Elevation="1">
        <MudStack Row="true">
            <MudImage Src="@urlImg" Height="250" ObjectPosition="ObjectPosition.Center" ObjectFit="ObjectFit.Cover" />
            <MudStack Justify="Justify.FlexEnd" Class="pa-4" Spacing="0" Style="width:100% !important">
                <MudText Typo="Typo.h6" Class="align-self-start flex-1">@Nombre</MudText>
                <MudText Typo="Typo.subtitle2" Class="align-self-start flex-1">$ @Precio</MudText>
                <MudText Typo="Typo.body2" Class="flex-1" Style="text-align:justify-all !important">@Descripcion</MudText>
                <MudStack Row="true" Justify="Justify.SpaceBetween">
                    <MudNumericField @bind-Value="Items" Label="Standard" Variant="Variant.Text" Min="1" Max="10" HelperText="(Note, 1 piece)" Style="width: 200px;" />
                    <MudStack Row="true" Class="align-self-end flex-1" AlignItems="AlignItems.End">
                        <MudIconButton Icon="@Icons.Material.Filled.Remove" Color="Color.Primary" Href="@($"/Product/{Code}")" />
                        <MudIconButton Icon="@Icons.Material.Filled.Favorite" Color="Color.Primary" />
                    </MudStack>
                </MudStack>
            </MudStack>
        </MudStack>
    </MudPaper>
}

@code {


    [Parameter]
    public long Code { get; set; }
    [Parameter]
    public string urlImg { get; set; }
    [Parameter]
    public string Precio { get; set; }
    [Parameter]
    public string Nombre { get; set; }
    [Parameter]
    public string Descripcion { get; set; }
    [Parameter]
    public int Items { get; set; } = 1;
    [Parameter]
    public CartUtilities.ViewCard view { get; set; } = CartUtilities.ViewCard.module;
}
