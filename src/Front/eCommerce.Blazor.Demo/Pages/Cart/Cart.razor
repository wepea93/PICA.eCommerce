@layout MainLayout
@page "/{Category:int?}"
@page "/Cart"

<PageTitle>@mainLayout.Title</PageTitle>

<MudGrid Class="d-flex justify-center">
    <MudItem sm="12" md="11">
        <MudGrid>
            <MudItem sm="12" md="8">
                <div class="mud-expand-panel mud-panel-expanded mud-elevation-1 mud-expand-panel-border">
                    <div class="mud-expand-panel-header">
                        <div class="mud-expand-panel-text">
                            <div class="d-flex">
                                <MudText Typo="Typo.h5">Cart (2 items)</MudText>
                            </div>
                        </div>
                    </div>
                    <div class="mud-collapse-container mud-collapse-entered" style="height:auto;">
                        <div class="mud-collapse-wrapper">
                            <div class="mud-collapse-wrapper-inner">
                                <div class="mud-expand-panel-content">
                                    <MudStack Spacing="4">
                                        @*@foreach (var p in Productos)
                                        {
                                            <ProductCard view="CartUtilities.ViewCard.Cart" urlImg="@p.url" Nombre="@p.Nombre" Precio="@p.Precio" Descripcion="@p.Descripcion" />
                                        }*@
                                    </MudStack>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </MudItem>
            <MudItem sm="12" md="4">
                <MudStack Spacing="2">
                    <div class="mud-expand-panel mud-panel-expanded mud-elevation-1 mud-expand-panel-border">
                        <div class="mud-expand-panel-header">
                            <div class="mud-expand-panel-text">
                                <div class="d-flex">
                                    <MudText Typo="Typo.h5">The total amount of</MudText>
                                </div>
                            </div>
                        </div>
                        <div class="mud-collapse-container mud-collapse-entered" style="height:auto;">
                            <div class="mud-collapse-wrapper">
                                <div class="mud-collapse-wrapper-inner">
                                    <div class="mud-expand-panel-content">
                                        <MudStack Spacing="4">
                                            <MudStack Row="true" Class="d-flex justify-space-between flex-grow-1 gap-4">
                                                <MudText Typo="Typo.caption">Temporary amount</MudText>
                                                <MudText Typo="Typo.caption">$53.98</MudText>
                                            </MudStack>
                                            <MudStack Row="true" Class="d-flex justify-space-between flex-grow-1 gap-4">
                                                <MudText Typo="Typo.caption">Shipping</MudText>
                                                <MudText Typo="Typo.caption">Gratis</MudText>
                                            </MudStack>
                                            <MudDivider Class="my-2" />
                                            <MudStack Row="true" Class="d-flex justify-space-between flex-grow-1 gap-4">
                                                <MudText Typo="Typo.caption"><strong>The total amount of (including VAT)</strong></MudText>
                                                <MudText Typo="Typo.caption"><strong>$53.98</strong></MudText>
                                            </MudStack>
                                            <MudDivider Class="my-2" />
                                            <MudButton Variant="Variant.Filled" FullWidth="true">go to checkout</MudButton>
                                        </MudStack>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <MudExpansionPanels Dense="true">
                        <MudExpansionPanel Text="Add a discount code (optional)">
                            <div class="pa-2">
                                <MudTextField Label="Promotional code" Value="@MyString2" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Filled.Discount" />
                            </div>
                        </MudExpansionPanel>
                    </MudExpansionPanels>
                </MudStack>
            </MudItem>
        </MudGrid>
    </MudItem>
</MudGrid>


